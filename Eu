import React from 'react';
import { FlatList, StyleSheet, View } from 'react-native';
import CardItem from '../components/CardItem';

const modalidades = [
  { id: '1', nome: 'Atletismo', descricao: 'Corridas, saltos e lançamentos' },
  { id: '2', nome: 'Natação', descricao: 'Provas na água' },
  { id: '3', nome: 'Ginástica', descricao: 'Exercícios em aparelhos' },
  { id: '4', nome: 'Futebol', descricao: 'Masculino e feminino' },
];

export default function ModalidadesScreen() {
  return (
    <FlatList
      data={modalidades}
      keyExtractor={(item) => item.id}
      contentContainerStyle={styles.container}
      renderItem={({ item }) => (
        <CardItem title={item.nome} description={item.descricao} />
      )}
    />
  );
}

const styles = StyleSheet.create({
  container: {
    padding: 10,
  },
});

